<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Formato de papel para cotización -->
    <record id="paperformat_quotation_huby" model="report.paperformat">
        <field name="name">Cotización Huby</field>
        <field name="default" eval="False"/>
        <field name="format">Letter</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">5</field>
        <field name="margin_bottom">5</field>
        <field name="margin_left">10</field>
        <field name="margin_right">10</field>
        <field name="header_line" eval="False"/>
        <field name="header_spacing">3</field>
        <field name="dpi">96</field>
    </record>

    <!-- Reporte de cotización Huby -->
    <record id="action_report_saleorder_huby" model="ir.actions.report">
        <field name="name">Cotización Huby</field>
        <field name="model">sale.order</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">huby_personalize.report_saleorder_huby</field>
        <field name="report_file">huby_personalize.report_saleorder_huby</field>
        <field name="binding_model_id" ref="sale.model_sale_order"/>
        <field name="binding_type">report</field>
        <field name="paperformat_id" ref="paperformat_quotation_huby"/>
    </record>

    <!-- Template del reporte simple y limpio con UTF-8 e imágenes -->
    <template id="report_saleorder_huby">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-set="doc" t-value="doc.with_context(lang=doc.partner_id.lang)"/>
                <t t-set="huby_logo" t-value="doc._huby_sale_logo()"/>
                <t t-set="huby_tagline" t-value="doc._huby_sale_tagline()"/>
                <t t-set="huby_footer" t-value="doc._huby_sale_footer()"/>

                <div class="page" style="font-family: Arial, Helvetica, sans-serif; font-size: 10pt; color: #333;">
                    <meta charset="UTF-8"/>

                    <!-- Banner profesionales - arriba de todo -->
                    <div style="text-align: center; margin-bottom: 15px;">
                        <t t-if="huby_tagline">
                            <img t-att-src="'data:image/png;base64,%s' % huby_tagline" alt="Profesionales en Comunicación Visual y Digital" style="max-width: 100%; max-height: 40px;"/>
                        </t>
                    </div>

                    <!-- Header con logo -->
                    <table style="width: 100%; margin-bottom: 20px; border-bottom: 2px solid #000; padding-bottom: 12px;">
                        <tr>
                            <td style="width: 40%; vertical-align: middle;">
                                <t t-if="huby_logo">
                                    <img t-att-src="'data:image/png;base64,%s' % huby_logo" alt="Logo HUBY" style="max-height: 65px;"/>
                                </t>
                            </td>
                            <td style="width: 60%; text-align: right; vertical-align: top; font-size: 9pt;">
                                <strong style="font-size: 11pt;" t-field="doc.company_id.name"/><br/>
                                <span t-if="doc.company_id.vat">RFC: <span t-field="doc.company_id.vat"/><br/></span>
                                <span t-if="doc.company_id.street">
                                    <span t-field="doc.company_id.street"/>
                                    <span t-if="doc.company_id.city">, <span t-field="doc.company_id.city"/></span><br/>
                                </span>
                                <span t-if="doc.company_id.phone">Tel: <span t-field="doc.company_id.phone"/><br/></span>
                                <span t-if="doc.company_id.email"><span t-field="doc.company_id.email"/></span>
                            </td>
                        </tr>
                    </table>

                    <!-- Proyecto -->
                    <div t-if="doc.project_id" style="margin: 15px 0; padding: 8px 12px; border-left: 3px solid #000; background-color: #f5f5f5;">
                        <strong>Proyecto: </strong><span t-field="doc.project_id.name"/>
                    </div>

                    <!-- Título -->
                    <h2 style="margin: 20px 0 15px 0; color: #000;">
                        <span t-if="doc.state in ['draft','sent']">Cotización </span>
                        <span t-else="">Orden de Venta </span>
                        <span t-field="doc.name"/>
                    </h2>

                    <!-- Información cliente y fechas -->
                    <table style="width: 100%; margin-bottom: 20px; border-collapse: collapse;">
                        <tr>
                            <td style="width: 50%; vertical-align: top; padding-right: 15px;">
                                <div style="background-color: #f5f5f5; padding: 12px; border: 1px solid #ccc;">
                                    <strong>Cliente</strong><br/>
                                    <div t-field="doc.partner_id" t-options='{"widget": "contact", "fields": ["name", "address"], "no_marker": True}' style="margin-top: 5px;"/>
                                    <div t-if="doc.partner_id.vat" style="margin-top: 5px;"><strong>RFC:</strong> <span t-field="doc.partner_id.vat"/></div>
                                    <div t-if="doc.partner_id.phone" style="margin-top: 5px;"><strong>Tel:</strong> <span t-field="doc.partner_id.phone"/></div>
                                </div>
                            </td>
                            <td style="width: 50%; vertical-align: top; padding-left: 15px;">
                                <table style="width: 100%;">
                                    <tr>
                                        <td style="padding: 5px 10px 5px 0;"><strong>Fecha:</strong></td>
                                        <td style="padding: 5px 0;"><span t-field="doc.date_order" t-options='{"widget": "date"}'/></td>
                                    </tr>
                                    <tr t-if="doc.validity_date and doc.state in ['draft', 'sent']">
                                        <td style="padding: 5px 10px 5px 0;"><strong>Vencimiento:</strong></td>
                                        <td style="padding: 5px 0;"><span t-field="doc.validity_date" t-options='{"widget": "date"}'/></td>
                                    </tr>
                                    <tr t-if="doc.user_id">
                                        <td style="padding: 5px 10px 5px 0;"><strong>Vendedor:</strong></td>
                                        <td style="padding: 5px 0;"><span t-field="doc.user_id"/></td>
                                    </tr>
                                    <tr t-if="doc.client_order_ref">
                                        <td style="padding: 5px 10px 5px 0;"><strong>Su referencia:</strong></td>
                                        <td style="padding: 5px 0;"><span t-field="doc.client_order_ref"/></td>
                                    </tr>
                                </table>
                            </td>
                        </tr>
                    </table>

                    <!-- Tabla de productos -->
                    <t t-set="lines_to_report" t-value="doc._get_order_lines_to_report()"/>
                    <t t-set="display_discount" t-value="any(l.discount for l in lines_to_report)"/>

                    <table style="width: 100%; border-collapse: collapse; margin: 20px 0;">
                        <thead>
                            <tr style="background-color: #333; color: white;">
                                <th style="padding: 10px 8px; text-align: left;">Descripción</th>
                                <th style="padding: 10px 8px; text-align: right; width: 80px;">Cantidad</th>
                                <th style="padding: 10px 8px; text-align: right; width: 100px;">Precio unitario</th>
                                <th t-if="display_discount" style="padding: 10px 8px; text-align: right; width: 70px;">Desc. %</th>
                                <th style="padding: 10px 8px; text-align: right; width: 90px;">Impuestos</th>
                                <th style="padding: 10px 8px; text-align: right; width: 100px;">Importe</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="lines_to_report" t-as="line">
                                <tr t-if="not line.display_type and line.product_type != 'combo'">
                                    <td style="padding: 8px; border-bottom: 1px solid #ddd;"><span t-field="line.name"/></td>
                                    <td style="padding: 8px; text-align: right; border-bottom: 1px solid #ddd;">
                                        <span t-field="line.product_uom_qty"/> <span t-field="line.product_uom"/>
                                    </td>
                                    <td style="padding: 8px; text-align: right; border-bottom: 1px solid #ddd;"><span t-field="line.price_unit"/></td>
                                    <td t-if="display_discount" style="padding: 8px; text-align: right; border-bottom: 1px solid #ddd;"><span t-field="line.discount"/></td>
                                    <td style="padding: 8px; text-align: right; border-bottom: 1px solid #ddd; font-size: 9pt;">
                                        <t t-set="taxes" t-value="', '.join([(tax.invoice_label or tax.name) for tax in line.tax_id])"/>
                                        <span t-out="taxes"/>
                                    </td>
                                    <td style="padding: 8px; text-align: right; border-bottom: 1px solid #ddd; font-weight: bold;"><span t-field="line.price_subtotal"/></td>
                                </tr>
                                <tr t-if="line.display_type == 'line_section' or line.product_type == 'combo'" style="background-color: #f0f0f0;">
                                    <td colspan="99" style="padding: 8px; border-bottom: 1px solid #ddd; font-weight: bold;">
                                        <span t-field="line.name"/>
                                    </td>
                                </tr>
                                <tr t-if="line.display_type == 'line_note'">
                                    <td colspan="99" style="padding: 8px; border-bottom: 1px solid #ddd; font-style: italic; color: #666;">
                                        <span t-field="line.name"/>
                                    </td>
                                </tr>
                            </t>
                        </tbody>
                    </table>

                    <!-- Totales -->
                    <div style="margin: 20px 0;">
                        <table style="width: 45%; margin-left: auto; border-collapse: collapse;">
                            <tr>
                                <td style="padding: 8px 12px; text-align: right; border-bottom: 1px solid #ddd;"><strong>Subtotal</strong></td>
                                <td style="padding: 8px 12px; text-align: right; border-bottom: 1px solid #ddd; width: 120px;">
                                    <span t-field="doc.amount_untaxed" t-options='{"widget": "monetary", "display_currency": doc.currency_id}'/>
                                </td>
                            </tr>
                            <tr>
                                <td style="padding: 8px 12px; text-align: right; border-bottom: 1px solid #ddd;"><strong>Impuestos</strong></td>
                                <td style="padding: 8px 12px; text-align: right; border-bottom: 1px solid #ddd;">
                                    <span t-field="doc.amount_tax" t-options='{"widget": "monetary", "display_currency": doc.currency_id}'/>
                                </td>
                            </tr>
                            <tr style="background-color: #333; color: white; font-weight: bold;">
                                <td style="padding: 10px 12px; text-align: right;"><strong>Total</strong></td>
                                <td style="padding: 10px 12px; text-align: right; font-size: 11pt;">
                                    <strong t-field="doc.amount_total" t-options='{"widget": "monetary", "display_currency": doc.currency_id}'/>
                                </td>
                            </tr>
                        </table>
                    </div>

                    <!-- Notas -->
                    <div t-if="doc.note" style="margin-top: 25px; padding: 10px 12px; background-color: #f5f5f5; border-left: 3px solid #000;">
                        <strong>Notas:</strong>
                        <div t-field="doc.note" style="margin-top: 5px;"/>
                    </div>

                    <div t-if="doc.payment_term_id.note" style="margin-top: 15px;">
                        <strong>Términos de pago:</strong>
                        <div t-field="doc.payment_term_id.note" style="margin-top: 5px;"/>
                    </div>

                    <!-- Footer con imagen -->
                    <div style="margin-top: 50px; padding-top: 15px; border-top: 2px solid #000; text-align: center;">
                        <t t-if="huby_footer">
                            <img t-att-src="'data:image/png;base64,%s' % huby_footer" alt="Footer" style="max-width: 100%; max-height: 50px; margin-bottom: 10px;"/>
                        </t>
                        <div style="font-size: 9pt; color: #666;">
                            <strong t-field="doc.company_id.name"/>
                            <span t-if="doc.company_id.phone"> | Tel: <span t-field="doc.company_id.phone"/></span>
                            <span t-if="doc.company_id.website"> | <span t-field="doc.company_id.website"/></span>
                        </div>
                    </div>

                </div>
            </t>
        </t>
    </template>
</odoo>
