<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Formato de papel sin márgenes -->
    <record id="paperformat_project_task" model="report.paperformat">
        <field name="name">Orden de Trabajo Sin Márgenes</field>
        <field name="default" eval="False"/>
        <field name="format">A4</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">0</field>
        <field name="margin_bottom">0</field>
        <field name="margin_left">0</field>
        <field name="margin_right">0</field>
        <field name="header_line" eval="False"/>
        <field name="header_spacing">0</field>
        <field name="dpi">96</field>
    </record>

    <!-- Definición del reporte -->
    <record id="action_report_project_task" model="ir.actions.report">
        <field name="name">Reporte de Tarea</field>
        <field name="model">project.task</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">huby_personalize.report_project_task_document</field>
        <field name="report_file">huby_personalize.report_project_task_document</field>
        <field name="binding_model_id" ref="project.model_project_task"/>
        <field name="binding_type">report</field>
        <field name="paperformat_id" ref="paperformat_project_task"/>
    </record>

    <!-- Template del reporte -->
    <template id="report_project_task_document">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="task">
                <t t-set="order" t-value="task.sale_order_id"/>
                <t t-set="company" t-value="task.company_id.sudo() if task.company_id else res_company"/>
                <div class="page o_huby_work_order">
                        <meta charset="UTF-8"/>
                        <style>
                            @charset "UTF-8";
                            * {
                                margin: 0;
                                padding: 0;
                                box-sizing: border-box;
                            }
                            @page {
                                margin: 0;
                                padding: 0;
                                size: A4 portrait;
                            }
                            html, body {
                                margin: 0 !important;
                                padding: 0 !important;
                                height: 100%;
                            }
                            .page {
                                margin: 0 !important;
                                padding: 15mm 15mm 15mm 15mm !important;
                                min-height: 100%;
                                page-break-after: always;
                            }
                            .o_huby_work_order {
                                font-family: 'Lato', 'Mukta', 'Helvetica', 'Arial', sans-serif;
                                color: #2c2c2c;
                                font-size: 13px;
                                line-height: 1.5;
                            }
                            .o_huby_work_order .wo-header {
                                display: flex;
                                justify-content: space-between;
                                gap: 24px;
                                align-items: flex-start;
                                border-bottom: 1.5px solid #333333;
                                padding-bottom: 20px;
                                margin-bottom: 8px;
                            }
                            .o_huby_work_order .wo-header-left {
                                flex: 2 1 0;
                            }
                            .o_huby_work_order .wo-number-label {
                                font-size: 16px;
                                letter-spacing: 1.5px;
                                text-transform: uppercase;
                                margin-bottom: 6px;
                                font-weight: 500;
                                color: #555555;
                            }
                            .o_huby_work_order .wo-number-value {
                                font-size: 24px;
                                font-weight: 500;
                                letter-spacing: 2px;
                                color: #1a1a1a;
                            }
                            .o_huby_work_order .wo-meta-table {
                                margin-top: 18px;
                                width: 100%;
                                border-collapse: collapse;
                            }
                            .o_huby_work_order .wo-meta-table th {
                                text-align: left;
                                font-weight: 500;
                                padding-right: 4px;
                                white-space: nowrap;
                                color: #444444;
                                font-size: 13px;
                                width: 1%;
                            }
                            .o_huby_work_order .wo-meta-table td {
                                padding: 5px 0;
                                color: #2c2c2c;
                                font-size: 13px;
                            }
                            .o_huby_work_order .wo-header-right {
                                flex: 1 1 0;
                                text-align: right;
                                display: flex;
                                flex-direction: column;
                                align-items: flex-end;
                            }
                            .o_huby_work_order .wo-logo {
                                display: inline-flex;
                                align-items: center;
                                justify-content: flex-end;
                                padding: 0;
                                margin-bottom: 20px;
                                margin-top: 0;
                            }
                            .o_huby_work_order .wo-logo img {
                                max-height: 50px;
                                max-width: 180px;
                                object-fit: contain;
                            }
                            .o_huby_work_order .wo-project-title {
                                margin-top: 0;
                                font-size: 19px;
                                font-weight: 500;
                                color: #1a1a1a;
                                line-height: 1.3;
                            }
                            .o_huby_work_order .wo-client-name {
                                font-size: 14px;
                                color: #555555;
                                margin-top: 6px;
                                font-weight: 400;
                                order: 3;
                            }
                            .o_huby_work_order .wo-company-name {
                                order: 1;
                            }
                            .o_huby_work_order .wo-tabs {
                                display: flex;
                                border-bottom: 1.5px solid #d0d0d0;
                                margin-top: 28px;
                                margin-bottom: 20px;
                            }
                            .o_huby_work_order .wo-tab {
                                padding: 10px 22px;
                                border: 1px solid #d0d0d0;
                                border-bottom: none;
                                margin-right: 6px;
                                font-weight: 500;
                                text-transform: uppercase;
                                font-size: 10px;
                                letter-spacing: 0.5px;
                                color: #555555;
                            }
                            .o_huby_work_order .wo-tab.wo-active {
                                background-color: #f8f8f8;
                                color: #2c2c2c;
                            }
                            .o_huby_work_order .wo-products {
                                width: 100%;
                                border-top: 1.5px solid #d0d0d0;
                                margin-bottom: 24px;
                            }
                            .o_huby_work_order .wo-product-empty {
                                padding: 16px;
                                text-align: center;
                                border-bottom: 1px solid #e0e0e0;
                                color: #888888;
                                font-style: italic;
                            }
                            .o_huby_work_order .wo-product-row {
                                display: flex;
                                justify-content: space-between;
                                gap: 16px;
                                padding: 14px 0;
                                border-bottom: 1px solid #e0e0e0;
                            }
                            .o_huby_work_order .wo-product-main {
                                flex: 1 1 auto;
                            }
                            .o_huby_work_order .wo-product-name {
                                font-weight: 500;
                                text-transform: uppercase;
                                font-size: 12px;
                                letter-spacing: 0.3px;
                                color: #2c2c2c;
                            }
                            .o_huby_work_order .wo-product-description {
                                margin-top: 6px;
                                line-height: 1.5;
                                color: #555555;
                                font-size: 12px;
                            }
                            .o_huby_work_order .wo-product-qty {
                                flex: 0 0 auto;
                                min-width: 90px;
                                text-align: right;
                                font-weight: 500;
                                color: #2c2c2c;
                                font-size: 13px;
                            }
                            .o_huby_work_order .wo-section {
                                margin-top: 22px;
                            }
                            .o_huby_work_order .wo-section-title {
                                font-weight: 500;
                                margin-bottom: 8px;
                                text-transform: uppercase;
                                letter-spacing: 0.5px;
                                font-size: 12px;
                                color: #444444;
                            }
                            .o_huby_work_order .wo-section-body {
                                border: 1px solid #d0d0d0;
                                min-height: 80px;
                                padding: 14px;
                                white-space: pre-line;
                                background-color: #fafafa;
                                border-radius: 2px;
                                font-size: 12px;
                                line-height: 1.6;
                                color: #555555;
                            }
                        </style>

                        <div class="wo-header">
                            <div class="wo-header-left">
                                <div class="wo-number-label">Orden de Trabajo</div>
                                <div class="wo-number-value">
                                    <t t-esc="(order and order.name) or task.name"/>
                                </div>

                                <table class="wo-meta-table">
                                    <tr>
                                        <th>Atendio:</th>
                                        <td>
                                            <t t-esc="task.sale_attended_by.name if task.sale_attended_by else (order.attended_by_employee_id.name if order and order.attended_by_employee_id else '-')"/>
                                        </td>
                                    </tr>
                                    <tr>
                                        <th>Fecha de cotizacion:</th>
                                        <td>
                                            <t t-if="order and order.date_order">
                                                <span t-field="order.date_order" t-options='{"widget": "date"}'/>
                                            </t>
                                            <t t-else="">-</t>
                                        </td>
                                    </tr>
                                    <tr>
                                        <th>Fecha de entrega 1:</th>
                                        <td>
                                            <t t-if="order and order.delivery_date_first">
                                                <span t-field="order.delivery_date_first" t-options='{"widget": "datetime"}'/>
                                            </t>
                                            <t t-else="">-</t>
                                        </td>
                                    </tr>
                                    <tr>
                                        <th>Fecha de entrega 2:</th>
                                        <td>
                                            <t t-if="order and order.delivery_date_second">
                                                <span t-field="order.delivery_date_second" t-options='{"widget": "datetime"}'/>
                                            </t>
                                            <t t-else="">-</t>
                                        </td>
                                    </tr>
                                </table>
                            </div>

                            <div class="wo-header-right">
                                <div class="wo-logo" t-if="company.logo">
                                    <img t-att-src="image_data_uri(company.logo)" alt="Logo"/>
                                </div>
                                <div class="wo-company-name" t-if="not company.logo">
                                    <strong><t t-esc="company.name"/></strong>
                                </div>
                                <div class="wo-project-title">
                                    Proyecto: <t t-esc="(order and order.project_name) or task.name"/>
                                </div>
                                <div class="wo-client-name">
                                    <t t-esc="task.partner_id.name if task.partner_id else (order.partner_id.name if order and order.partner_id else '')"/>
                                </div>
                            </div>
                        </div>

                        <div style="margin-top: 10px; padding: 5px 0; border-bottom: 1px solid #e0e0e0;">
                            <span style="font-weight: 500; font-size: 12px; color: #444444;">Etiquetas: </span>
                            <span style="font-size: 12px; color: #555555;">
                                <t t-esc="', '.join(task.tag_ids.mapped('name')) if task.tag_ids else '-'"/>
                            </span>
                        </div>

                        <div class="wo-tabs">
                            <div class="wo-tab wo-active">Proyecto</div>
                        </div>

                        <div class="wo-products">
                            <t t-if="not task.sale_order_line_ids">
                                <div class="wo-product-empty">Sin productos asociados</div>
                            </t>
                            <t t-foreach="task.sale_order_line_ids" t-as="line">
                                <div class="wo-product-row">
                                    <div class="wo-product-main">
                                        <div class="wo-product-name">
                                            <span t-field="line.product_id.display_name"/>
                                        </div>
                                        <div class="wo-product-description">
                                            <span t-field="line.name"/>
                                        </div>
                                    </div>
                                    <div class="wo-product-qty">
                                        <t t-esc="'%.2f' % line.product_uom_qty"/>
                                        <t t-if="line.product_uom">
                                            <span> </span>
                                            <t t-esc="line.product_uom.name"/>
                                        </t>
                                    </div>
                                </div>
                            </t>
                        </div>

                        <div class="wo-section">
                            <div class="wo-section-title">Observaciones</div>
                            <div class="wo-section-body">
                                <t t-if="task.observations">
                                    <t t-esc="task.observations"/>
                                </t>
                                <t t-else=""> </t>
                            </div>
                        </div>

                        <div class="wo-section">
                            <div class="wo-section-title">Compras</div>
                            <div class="wo-section-body"> </div>
                        </div>
                </div>
            </t>
        </t>
    </template>
</odoo>
